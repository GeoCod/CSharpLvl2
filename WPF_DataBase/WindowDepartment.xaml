<Window x:Class="WPF_DataBase.WindowDepartment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_DataBase"
        mc:Ignorable="d"
        Title="Департаменты" Height="425.625" Width="544.062" Loaded="Window_Loaded">
    <Grid>
        <DataGrid x:Name="dgDepartment" AutoGenerateColumns="False" Grid.Row="1" FontSize="12">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Path=ID}" MinWidth="40"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Path=NameDepartment}" Width="*" MinWidth="150"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
